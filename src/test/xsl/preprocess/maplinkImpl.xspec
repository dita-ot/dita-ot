    </x:scenario>
    <x:scenario label="Scenario for testing function GetPathToMap">
      <x:call template="GetPathToMap">
        <x:param name="inputMap" select="'foo/bar'"/>
      </x:call>
      <x:expect label="">foo/</x:expect>
    </x:scenario>
    <x:scenario label="Scenario for testing function GetPathToMap">
      <x:call template="GetPathToMap">
        <x:param name="inputMap" select="'foo/bar/'"/>
