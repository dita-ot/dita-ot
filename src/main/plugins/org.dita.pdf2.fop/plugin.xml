<plugin id="org.dita.pdf2.fop">
  <require plugin="org.dita.pdf2"/>
  <!-- extensions -->
  <feature extension="depend.org.dita.pdf2.init.pre" value="transform.fo2pdf.fop.init"/>
  <feature extension="depend.org.dita.pdf2.format" value="transform.fo2pdf.fop"/>
  <feature extension="dita.conductor.lib.import" file="lib/avalon-framework-api-4.2.0.jar"/>
  <feature extension="dita.conductor.lib.import" file="lib/avalon-framework-impl-4.2.0.jar"/>
  <feature extension="dita.conductor.lib.import" file="lib/batik-anim-1.7.jar"/>
  <feature extension="dita.conductor.lib.import" file="lib/batik-awt-util-1.7.jar"/>
  <feature extension="dita.conductor.lib.import" file="lib/batik-bridge-1.7.jar"/>
  <feature extension="dita.conductor.lib.import" file="lib/batik-css-1.7.jar"/>
  <feature extension="dita.conductor.lib.import" file="lib/batik-dom-1.7.jar"/>
  <feature extension="dita.conductor.lib.import" file="lib/batik-ext-1.7.jar"/>
  <feature extension="dita.conductor.lib.import" file="lib/batik-extension-1.7.jar"/>
  <feature extension="dita.conductor.lib.import" file="lib/batik-gvt-1.7.jar"/>
  <feature extension="dita.conductor.lib.import" file="lib/batik-parser-1.7.jar"/>
  <feature extension="dita.conductor.lib.import" file="lib/batik-script-1.7.jar"/>
  <feature extension="dita.conductor.lib.import" file="lib/batik-svg-dom-1.7.jar"/>
  <feature extension="dita.conductor.lib.import" file="lib/batik-svggen-1.7.jar"/>
  <feature extension="dita.conductor.lib.import" file="lib/batik-transcoder-1.7.jar"/>
  <feature extension="dita.conductor.lib.import" file="lib/batik-util-1.7.jar"/>
  <feature extension="dita.conductor.lib.import" file="lib/batik-xml-1.7.jar"/>
  <feature extension="dita.conductor.lib.import" file="lib/commons-logging-1.0.4.jar"/>
  <feature extension="dita.conductor.lib.import" file="lib/fop-1.1.jar"/>
  <feature extension="dita.conductor.lib.import" file="lib/xmlgraphics-commons-1.5.jar"/>
  <transtype name="pdf" desc="PDF">
    <param name="pdf.formatter" desc="Specifies the XSL processor." type="enum">
      <val desc="Apache FOP" default="true">fop</val>
    </param>
    <param name="args.fo.userconfig" desc="Specifies the user configuration file for FOP." type="file"/>
  </transtype>
  <feature extension="dita.conductor.pdf2.formatter.check" value="fop"/>
  <feature extension="dita.conductor.target.relative" file="integrator.xml"/>
  <template file="xsl/fo/topic2fo_shell_fop_template.xsl"/>
</plugin>
