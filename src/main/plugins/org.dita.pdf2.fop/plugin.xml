<plugin id="org.dita.pdf2.fop">
  <require plugin="org.dita.pdf2"/>
  <!-- extensions -->
  <feature extension="depend.org.dita.pdf2.init.pre" value="transform.fo2pdf.fop.init"/>
  <feature extension="depend.org.dita.pdf2.format" value="transform.fo2pdf.fop"/>
  <feature extension="dita.conductor.lib.import" file="lib/avalon-framework-api-4.3.1.jar"/>
  <feature extension="dita.conductor.lib.import" file="lib/avalon-framework-impl-4.3.1.jar"/>
  <feature extension="dita.conductor.lib.import" file="lib/batik-anim-1.9.jar"/>
  <feature extension="dita.conductor.lib.import" file="lib/batik-awt-util-1.9.jar"/>
  <feature extension="dita.conductor.lib.import" file="lib/batik-bridge-1.9.jar"/>
  <feature extension="dita.conductor.lib.import" file="lib/batik-constants-1.9.jar"/>
  <feature extension="dita.conductor.lib.import" file="lib/batik-css-1.9.jar"/>
  <feature extension="dita.conductor.lib.import" file="lib/batik-dom-1.9.jar"/>
  <feature extension="dita.conductor.lib.import" file="lib/batik-ext-1.9.jar"/>
  <feature extension="dita.conductor.lib.import" file="lib/batik-extension-1.9.jar"/>
  <feature extension="dita.conductor.lib.import" file="lib/batik-gvt-1.9.jar"/>
  <feature extension="dita.conductor.lib.import" file="lib/batik-i18n-1.9.jar"/>
  <feature extension="dita.conductor.lib.import" file="lib/batik-parser-1.9.jar"/>
  <feature extension="dita.conductor.lib.import" file="lib/batik-script-1.9.jar"/>
  <feature extension="dita.conductor.lib.import" file="lib/batik-svg-dom-1.9.jar"/>
  <feature extension="dita.conductor.lib.import" file="lib/batik-svggen-1.9.jar"/>
  <feature extension="dita.conductor.lib.import" file="lib/batik-transcoder-1.9.jar"/>
  <feature extension="dita.conductor.lib.import" file="lib/batik-util-1.9.jar"/>
  <feature extension="dita.conductor.lib.import" file="lib/batik-xml-1.9.jar"/>
  <feature extension="dita.conductor.lib.import" file="lib/commons-logging-1.2.jar"/>
  <feature extension="dita.conductor.lib.import" file="lib/fontbox-2.0.6.jar"/>
  <feature extension="dita.conductor.lib.import" file="lib/fop-2.2.jar"/>
  <feature extension="dita.conductor.lib.import" file="lib/xml-apis-ext-1.3.04.jar"/>
  <feature extension="dita.conductor.lib.import" file="lib/xmlgraphics-commons-2.2.jar"/>
  <transtype name="pdf" desc="PDF">
    <param name="pdf.formatter" desc="Specifies the XSL processor." type="enum">
      <val desc="Apache FOP" default="true">fop</val>
    </param>
    <param name="args.fo.userconfig" desc="Specifies the user configuration file for FOP." type="file"/>
  </transtype>
  <feature extension="dita.conductor.pdf2.formatter.check" value="fop"/>
  <feature extension="ant.import" file="build_fop.xml"/>
  <template file="xsl/fo/topic2fo_shell_fop_template.xsl"/>
</plugin>
