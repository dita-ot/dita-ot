  <loadproperties>
    <javaresource name="application.properties"/>
  </loadproperties>
  <!-- Initialize DITA-OT base directory -->
  <dirname property="ant.file.DOST.dir" file="${ant.file.DOST}" />
  <property name="dita.dir" location="${ant.file.DOST.dir}"/>
  <!-- XXX Is this ever used? -->
  <property name="dita.dir" location="${basedir}"/>

  <property file="${dita.dir}/local.properties"/>
  <property name="dita.cache.dir" location="/Users/jelovirt/Library/Application Support/DITA-OT"/><!--/${otrelease}-->

  <import>
    <first>
      <multirootfileset includes="plugins/org.dita.base/build.xml">
        <basedir file="${dita.dir}"/>
        <basedir file="${dita.cache.dir}"/>
      </multirootfileset>
    </first>
  </import>

